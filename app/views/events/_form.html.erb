<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Event name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :charity, placeholder: "Charity", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder: "Event description", class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Event::CATEGORY_OPTIONS %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
